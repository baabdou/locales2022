{% extends 'base.html.twig' %}

{% block content %}

<!-- Content -->
<section style="padding-top:1em;">
    <div class="container">
        <div class="row align-items-start">
            <div class="col-sm-10"><h4>Liste des candidatures / coalitions</h4></div>
            <div class="col-sm-2"><a href="#" class="button primary small">Passer en mode édition</a></div>
        </div>
    </div>
    <h4></h4>
    <div class="table-responsive">
        <table class="table table-sm table-hover table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>Titulaires</th>
                <th>Suppleants</th>
                <!--
                <th>Proportionnel</th>
                <th>Majoritaire</th>
                <th>Nombre_votes</th>
                <th>Etat</th>
                <th>actions</th>
                -->
            </tr>
            </thead>
            <tbody>
            {% for liste in listes %}
            <tr>
                <td>{{ liste.id }}</td>
                <td>{{ liste.libelle }}</td>
                <td>{{ liste.description }}</td>
                <td> . . . </td>
                <td> . . . </td>
                <!--
                <td>{{ liste.proportionnel }}</td>
                <td>{{ liste.majoritaire }}</td>
                <td>{{ liste.nombreVotes }}</td>
                <td>{{ liste.etat }}</td>
                <td>
                    <a href="{{ path('liste_show', {'id': liste.id}) }}">show</a>
                    <a href="{{ path('liste_edit', {'id': liste.id}) }}">edit</a>
                </td>
                -->
            </tr>
            {% else %}
            <tr>
                <td colspan="10">Aucune liste de candidature / coalition n'a été trouvée</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</section>


{% endblock %}


